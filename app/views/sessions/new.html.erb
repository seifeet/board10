<div class="signin_container clearfix">

<h1>&nbsp;</h1>
<!--%= form_for(:session, :url => sessions_path, :html => { :class => "clearfix"}, :builder => AppFormBuilder ) do |f| %-->
<%= form_for :session, :url => sessions_path do |f| %>
  <div class="textfield">
    <%= f.label :email %>
	<%= f.text_field :email, :class => "rounded" %>
  </div>
  <div class="textfield">
    <%= f.label :password %>
    <%= f.password_field :password, :class => "rounded" %>
  </div>
  <div class="linkfield">
    <%= check_box_tag :remeber_me, 1, params[:remeber_me] %>
    <%= label_tag :remeber_me %>&nbsp;&nbsp;&nbsp;&nbsp;
	<%= link_to "forgotten password?", new_password_reset_path %>
  </div>
  <div class="buttonfield">
	<%= f.submit "Sign in", :class => "with_img green fill" %>
  </div>

<% end %>

<div class="buttonfield">
	<%= link_to "New user? Sign up now!", signup_path, :class => "button_with_img button_grey"  %>
</div>
</div>
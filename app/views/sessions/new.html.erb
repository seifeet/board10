<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path, :html => { :class => "clearfix"} ) do |f| %>
  <div class="field">
    <%= f.label :email %>
	<%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= label_tag :remeber_me %>
    <%= check_box_tag :remeber_me, 1, params[:remeber_me] %>
  </div>
  <%= f.submit "Sign in", :class => "with_img green" %>
<% end %>

<div class="field">
	<%= link_to "forgotten password?", new_password_reset_path %><br />
</div>
  
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
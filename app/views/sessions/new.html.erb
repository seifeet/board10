<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <%= link_to "forgotten password?", new_password_reset_path %><br />
  <div class="field">
    <%= label_tag :remeber_me %>
    <%= check_box_tag :remeber_me, 1, params[:remeber_me] %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<% content_for :head_css do %>
<%= stylesheet_link_tag 'sessions' %>
<% end %>

<div class="signin_container alpha60 clearfix">

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li>
            <%= msg %>
        </li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="single_field">
    <%= f.label :email, :class => "nested_label" %>
    <%= f.text_field :email, :class => "text_rounded" %>
</div>
<div class="single_field">
    <%= f.label :first_name, :class => "nested_label" %>
    <%= f.text_field :first_name, :class => "text_rounded" %>
</div>
<div class="single_field">
    <%= f.label :last_name, :class => "nested_label" %>
    <%= f.text_field :last_name, :class => "text_rounded" %>
</div>
<div class="single_field">
    <%= f.select(:country, Country.all, {:selected => "United States"},:class => "text_rounded") %>
</div>

<div class="single_field">
	<%= f.select(:state, State.all, {:include_blank => true},:class => "text_rounded") %>
</div>
<div class="single_field">
    <%= f.label :city, :class => "nested_label" %>
    <%= f.text_field :city, :class => "text_rounded" %>
</div>
<div class="single_field">
    <%= f.label :password, 'Password', :class => "nested_label" %>
    <%= f.password_field :password, :size => 40, :class => "text_rounded" %>
</div>
<div class="single_field">
    <%= f.label :password_confirmation, 'Confirm Password', :class => "nested_label" %>
    <%= f.password_field :password_confirmation, :size => 40, :class => "text_rounded" %>
</div>
<div class="single_field">
	<%= f.submit "Create User", :class => "button_with_img button_green" %>
</div>
<% end %>

</div>
<fieldset id="user_details">
<div id="user"><%= @user.full_name %>
<div id="email"><%= @user.email %></div>
<div id="location"><%= @user.location %></div>
<div id="view_count"><%= pluralize(@user.view_count, 'view') %></div>
<nav>
	<ul>
	<% if current_user?(@user) %>
	<li><%= link_to 'New Board', new_board_path %></li>
	<li><%= link_to 'Edit Profile', edit_user_path(@user) %></li>
	<li><%= link_to 'Delete Profile', @user, confirm: 'Are you sure?', method: :delete,
	                :title => "Delete #{@user.full_name}" %></li>
	<% end %>
   </ul>
</nav>
<br />
<hr>
<div id="user_boards">
<% unless @user.boards.empty? %>
  <div class="user_board">
  <%= link_to "All", user_path(@user) %>
  </div>
  <br class="clearBoth" />
  <% @user.boards.each do |board| %>
     <% if board.active? %>
     <div class="user_board">
     <%= link_to "#{board.title}", :board => board.id %>
     </div>
     <br class="clearBoth" />
     <% end %>
  <% end %>
<% end %>
</div>
</fieldset>
<% if !params[:school_search].nil? || !params[:board_search].nil? %>
    <% if params[:search].nil? && !params[:school_search].nil? %>
      $("#top_title_action").html("<%= escape_javascript(render 'tab_school_search') %>");
    <% elsif params[:search].nil? && !params[:board_search].nil? %>
      $("#top_title_action").html("<%= escape_javascript(render 'tab_board_search') %>");
	<% elsif !params[:school_search].nil? %>
	  $(".search_tab").html("<%= escape_javascript(render 'shared/containers/small_container', :container => @search_results) %>");
	  document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Schools by #{(params[:state] || 'name').titleize}") %>";
	<% elsif !params[:board_search].nil? %>
	  $(".search_tab").html("<%= escape_javascript(render 'shared/containers/small_container', :container => @search_results) %>");
	  document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Boards") %>";
	<% end %>

<% else %>
$("#title").html("<%= escape_javascript( render 'title' ) %>");
<% @loader = true %>
$(".user_sub_title").html("<%= escape_javascript(render 'user_sub_title', :element => @board, :element_path => board_path(@board), :custom_action => nil ) %>");
$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>" );
<% end %>

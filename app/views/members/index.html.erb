<h1>Group Members</h1>
<div class="apple_pagination">
    <%= will_paginate @users, :container => false, :total_entries => @users.count %>
</div>
<% @users.each do |u| %>
  <% if u.members.count > 0 %>
  <hr><h3><%= link_to u.full_name, user_path(u) %> is a member in the groups:</h3>
  <%= render 'shared/container', :container => u.members %>
  <% end %>
<% end %>
<div class="apple_pagination">
    <%= will_paginate @users, :container => false, :total_entries => @users.count %>
</div>

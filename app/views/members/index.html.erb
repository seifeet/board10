<h1>Group Members</h1>
<div class="apple_pagination">
    <%= will_paginate @users, :container => false, :total_entries => @users.count %>
</div>
<table>
    <% @users.each do |u| %>
    <% if u.members.count > 0 %>
    <tr><td><hr><h3><%= link_to u.full_name, user_path(u) %> is a member in the groups:</h3></td></tr>
    <% u.members.each do |member| %>
       <%= render member %>
    <% end %>
    <% end %>
    <% end %>
</table>
<div class="apple_pagination">
    <%= will_paginate @users, :container => false, :total_entries => @users.count %>
</div>

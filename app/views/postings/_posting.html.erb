<tr>
  <td class="posting">
    <% group = Group.find( posting.group_id )%>
    <span class="group">
        <b>Group <%= link_to "#{strip_and_cut(group.title,50)}", group_path(posting.group_id) %></b>
    </span>
    <span class="author">
        posted by   
        <% if ( posting.active_user ) %>
        <% user = User.find( posting.user_id )%>
        <%= link_to "#{user.full_name}", user_path(posting.user_id) %>
        <% else %>
        Unknown
        <% end %>
    </span>
    <span class="timestamp">
        <i><%= time_ago_in_words(posting.created_at) %> ago.</i> 
    </span>
    <br />
    <% unless !posting.subject.nil? && posting.subject.empty? %>
    <span class="subject">Subject: <%= posting.subject %></span>
    <% end %>
    <i>(<%= pluralize( posting.view_count, 'view') %>)</i>
    <% if ( current_user.id == posting.user_id ) %>
    <span class="edit"><%= link_to 'Edit', edit_posting_path(posting) %></span>
    <span class="delete"><%= link_to 'Delete', posting, confirm: 'Are you sure?', method: :delete %></span>
    <% end %>
    <br />
    <span class="content">
        <%= link_to strip_and_cut(posting.content, 120), posting_path(posting) %>
    </span>
  </td>
</tr>
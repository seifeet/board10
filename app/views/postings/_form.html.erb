<%= form_for(@posting) do |f| %>
  <% if @posting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@posting.errors.count, "error") %> prohibited this posting from being saved:</h2>
      <ul>
      <% @posting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.radio_button 'visibility', '1' %><%= f.label :visibility ,Posting::PUBLIC %>
    <%= f.radio_button 'visibility', '0' %><%= f.label :visibility, Posting::PRIVATE %>
    <br />
    <%= f.text_area :content, :rows => 7, :cols => 40 %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Post' %>
  </div>
<% end %>

<% if session[:return_to] =~ /\/home?/ %>
<% if @failures %>
$(".info_note").html("<%= escape_javascript(render 'home/info') %>");
<% else %>
$(".info_note").html("<%= escape_javascript(render 'home/info') %>");
$("#user_boards").html("<%= escape_javascript(render 'home/user_boards' ) %>");
$("#title").html("<%= escape_javascript( render 'home/title' ) %>");
$(".board_title").html("<%= escape_javascript( link_to strip_and_cut(@board.title, 80), board_path(@board) ) %>");
<% end %>
<% end %>

$(".loading").html("");
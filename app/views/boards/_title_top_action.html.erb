<% if !params[:act].nil? %>

	<% if params[:act] == 'write' && params[:subact] != 'cancel' %>
	<%= render 'boards/tab_write_message' %>
	<% elsif params[:act] == 'invite' && params[:subact] != 'cancel' %>
	<div id="tab_invite_search"><%= render 'boards/tab_invite_search' %></div>
	<% elsif params[:act] == 'edit_board' %>
	<div class="action_tab"><%= render 'home/new_board_form' %></div>
	<% elsif ( params[:act] == 'add_event' || params[:act] == 'edit_event' ) && params[:subact] != 'cancel' %>
	<div id="tab_new_event"><%= render 'home/tab_new_event' %></div>
	<% elsif params[:act] == 'calendar' %>
	<div class="action_tab"><%= render 'boards/tab_board_post_search' %></div>
	<% end %>

<% end %>
<div class="clearfix">
<div class="close_button clearfix clickable">
<%= link_to "Close", home_path + "?act=user_search&subact=cancel", :class => 'tips', :title => "Close Find People" %>
</div>
<%= form_tag home_path, :method => :get, :id => "tab_user_search", :remote => true do %>
<div class="field">
    <%= label_tag :search, "Search Criteria" %><br />
    <%= text_field_tag :search, params[:search] %>
</div>
<%= hidden_field_tag 'act', 'user_search' %>
<%= submit_tag "Find people", :name => nil, :class => 'button_neutral', :disable_with => "Searching..." %>
<% end %>
</div>
<% if !params[:act].nil? && params[:act] == 'write' && !current_user.nil? %>
<script type="text/javascript">
  $(function() {
    $('textarea').tinymce({
<% if params[:subact] == 'advanced' %>
      theme: 'advanced'
<% else %>
      theme: 'simple'
<% end %>
    });
  });
</script>
<div class="close_button inline_right clickable">
  <%= link_to "Close", home_path + '?subact=cancel', :title => "Close Messages" %>
</div>
<div class="close_button inline_right clickable">
<% if params[:subact] == 'advanced' %>
  <%= link_to "Simpe", home_path + "?act=write&board=#{params[:board]}", :title => "Switch to simple editing" %>
<% else %>
  <%= link_to "Advanced", home_path + "?act=write&subact=advanced&board=#{params[:board]}", :title => "Switch to advanced editing" %>
<% end %>
</div>
<div id="action_tab">
<%= render 'board_posting_form' %>
</div>
<% end %>

<div class="clearfix">
<div class="close_button clearfix clickable">
<%= link_to "Close", home_path + "?act=board_search&subact=cancel", :title => "Close Find People" %>
</div>
<%= form_tag home_path, :method => :get, :id => "tab_boards_search", :remote => true do %>
<div class="field">
    <%= label_tag :search, "Search Criteria" %><br />
    <%= text_field_tag :search, params[:search] %>
</div>
<%= hidden_field_tag 'act', 'board_search' %>
<%= submit_tag "Search boards", :name => nil, :class => 'button_neutral', :disable_with => "Searching..." %>
<% end %>
</div>
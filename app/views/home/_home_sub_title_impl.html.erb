<% if !params[:act].nil? && params[:act] == 'messages' %>
Messages
<% elsif !board.nil? || ( !params[:board].nil? && board = Board.find_board(params[:board]) ) %>
<div class="board_title float_left">
<%= link_to strip_and_cut(board.title, 80), board_path(board) %>
</div>
<div class="autorefresh_link float_right refreshable">
<%= render 'home/autorefresh_link', :form_obj => form_obj, :from => from, :element => board, :results => results %>
</div>
<% elsif !school.nil? %>
<div class="float_left">
<%= link_to strip_and_cut(school.title, 80), school_path(school) %>
</div>
<div class="autorefresh_link float_right refreshable">
<%= render 'home/autorefresh_link', :form_obj => form_obj, :from => from, :element => school, :results => results %>
</div>

<% else %>
<div class="float_left clickable">
<%= other_title %>
</div>
<% if params[:board] || params[:school] || params[:act] == 'boards' || params[:act] == 'schools' %>
<div class="autorefresh_link float_right refreshable">
<%= render 'home/autorefresh_link', :form_obj => form_obj, :from => from, :element => nil, :results => results %>
</div>
<% end %>
<% end %>

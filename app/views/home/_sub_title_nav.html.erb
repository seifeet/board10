<% if !params[:school].nil? || params[:act] == 'schools' || params[:act] == 'school_search' %>
    <% if params[:act] == 'school_search' %>
	<div class="sub_menu_button clickable selected">
	<% else %>
	<div class="sub_menu_button clickable">
	<% end %>
	<%= link_to 'ADD', home_path+"?act=school_search", :title => "Search for schools and add them to your profile" %>
	</div>
<% elsif params[:act] == 'boards' || params[:act] == 'new_board' || params[:act] == 'board_search' %>
	<% if params[:act] == 'board_search' %>
	<div class="sub_menu_button clickable selected">
	<% else %>
	<div class="sub_menu_button clickable">
	<% end %>
	<%= link_to 'JOIN', home_path+"?act=board_search", :title => "Search for boards and add them to your profile" %>
	</div>
	<% if params[:act] == 'new_board' %>
	<div class="sub_menu_button clickable selected">
	<% else %>
	<div class="sub_menu_button clickable">
	<% end %>
	<%= link_to 'NEW', home_path+"?act=new_board", :title => "Create a new board" %>
	</div>

<% elsif !params[:board].nil? %>
	<% board = ( @board.nil? ? Board.find_board(params[:board]) : @board ) %>
	
	<% if !board.nil? %>
	<div class="sub_menu_button">
	<%= link_to 'SHOW', board, :title => "Take me to this Board" %>
	</div>
	
	<% if current_user.member?(board) %>
	<% if params[:act] == 'write' %>
	<div class="sub_menu_button clickable selected">
	<% else %>
	<div class="sub_menu_button clickable">
	<% end %>
	<%= link_to 'WRITE', home_path+"?board=#{params[:board]}&act=write", :title => "Post on the current board" %>
	</div>
	<% end %>
	
	<% if current_user.owner?(board) %>
	<% if params[:act] == 'invite' %>
	<div class="sub_menu_button clickable selected">
	<% else %>
	<div class="sub_menu_button clickable">
	<% end %>
	<%= link_to 'INVITE', home_path+"?board=#{params[:board]}&act=invite", :title => "Invite people to your board" %>
	</div>
	<div class="sub_menu_button">
	<%= link_to 'EDIT', edit_board_path(@board), :title => "Take me to this Board" %>
	</div>
	<% end %>
	<% end %>
<% elsif params[:act] == 'posts' || params[:act] == 'post_search' %>
	<% if params[:act] == 'post_search' %>
	<div class="sub_menu_button clickable selected">
	<% else %>
	<div class="sub_menu_button clickable">
	<% end %>
	<%= link_to 'SEARCH', home_path+"?act=post_search", :title => "Search posts" %>
	</div>
<% 
end # end of "if !params[:school].nil? || ..."
%>
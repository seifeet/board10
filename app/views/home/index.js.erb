<% if !params[:page].nil? %>
	$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");

<% elsif !params[:act].nil? %>

	<% if params[:act] == 'cancel' %>
		$("#title_top_action").html("");
		document.title = "<%= escape_javascript("#{current_user.full_name}") %>";
		
	<% elsif params[:act] == 'boards' %>
	    $("#title_top_action").html("");
		$("#title").html("<%= escape_javascript( render 'title' ) %>");
		$(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
		$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
	    document.title = "My Boards";
	    
	<% elsif params[:act] == 'messages' %>
		$("#title_top_action").html("");
		$(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
		$("#user_postings").html("<%= escape_javascript(render 'home/messages') %>");
	    document.title = "My Messages";
	    
	<% elsif params[:act] == 'schools' %>
		$("#title").html("<%= escape_javascript( render 'title' ) %>");
	    document.title = "My Schools";
	    
	<% elsif params[:act] == 'school_search' && !params[:search].nil? %>
    	$(".action_tab").html("<%= escape_javascript(render 'tab_school_results') %>");
		document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Schools by #{(params[:state] || 'name').titleize}") %>";
    
    <% elsif params[:act] == 'school_search' %>
    	$("#navigation").html("<%= escape_javascript(render 'home/navigation' ) %>");
        $("#title_top_action").html("<%= escape_javascript(render 'tab_school_search') %>");
        document.title = "School Search";
    
    <% elsif params[:act] == 'board_search' && !params[:search].nil? %>
    	$(".action_tab").html("<%= escape_javascript(render 'tab_board_results') %>");
		document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Boards") %>";
	  
    <% elsif params[:act] == 'board_search' %>
    	$("#navigation").html("<%= escape_javascript(render 'home/navigation' ) %>");
        $("#title_top_action").html("<%= escape_javascript(render 'tab_board_search') %>");
        document.title = "Board Search";
        
	<% elsif params[:act] == 'invite' %>
    	$("#navigation").html("<%= escape_javascript(render 'home/navigation' ) %>");
        $("#title_top_action").html("<%= escape_javascript(render 'tab_invite_search') %>");
        document.title = "Invite people";
        
	<% elsif params[:act] == 'write' %>
		$("#title_top_action").html("<%= escape_javascript(render 'tab_write_message') %>");
		$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
	    document.title = "Write to Board";
	
	<% elsif params[:act] == 'new_board' %>
	    $("#title_top_action").html("<%= escape_javascript(render 'new_board_form') %>");
	    document.title = "Create a new Board";
	<% end %>
	
<% elsif !params[:board].nil? %>
	$("#title_top_action").html("");
    $("#title").html("<%= escape_javascript( render 'title' ) %>");
    $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
	$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
    document.title = "Board | <%= escape_javascript("#{current_user.full_name}") %>";
    
<% elsif !params[:school].nil? %>
	$("#title_top_action").html("");
    $("#title").html("<%= escape_javascript( render 'title' ) %>");
	$(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
	$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
	document.title = "School | <%= escape_javascript("#{current_user.full_name}") %>";
<% end %>

$(".logo_messages").html("<%= escape_javascript( render 'home/check_new_msg' ) %>");
$(".info_note").html("<%= escape_javascript(render 'home/info') %>");
$(".loading").html("");

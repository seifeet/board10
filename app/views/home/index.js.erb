<% if ( !params[:boards].nil? || !params[:schools].nil? ) && params[:page].nil? %>
<% 
   # do nothing special (just default at the end)
%>
<% elsif !params[:school_search].nil? || !params[:board_search].nil? %>
    <% if params[:search].nil? && !params[:school_search].nil? %>
      $("#top_title_action").html("<%= escape_javascript(render 'tab_school_search') %>");
    <% elsif params[:search].nil? && !params[:board_search].nil? %>
      $("#top_title_action").html("<%= escape_javascript(render 'tab_board_search') %>");
	<% elsif !params[:school_search].nil? %>
	  $(".action_tab").html("<%= escape_javascript(render 'tab_school_results') %>");
	  document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Schools by #{(params[:state] || 'name').titleize}") %>";
	<% elsif !params[:board_search].nil? %>
	  $(".action_tab").html("<%= escape_javascript(render 'tab_board_results') %>");
	  document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Boards") %>";
	<% end %>
<% elsif !params[:element_action].nil? %>
      $("#top_title_action").html("<%= escape_javascript(render 'tab_write_message') %>");
	  document.title = "<%= escape_javascript("Write to Board") %>";
<% else %>
$("#title").html("<%= escape_javascript( render 'title' ) %>");
$("#top_title_action").html("<%= escape_javascript( render 'top_title_action' ) %>");
<% @loader = true %>
$(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
$("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>" );
<% end %>

$("#top_title_nav").html("<%= escape_javascript(render 'top_title_nav' ) %>");
$(".loading").html("");

<% if !params[:page].nil? %>
    $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");

<% elsif !params[:act].nil? %>
        
    <% if params[:act] == 'boards' %>
        $("#title_top_action").html("");
        $("#title").html("<%= escape_javascript( render 'title' ) %>");
        $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
        document.title = "My Boards";
        
    <% elsif params[:act] == 'messages' %>
        $("#title_top_action").html("");
        $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/messages') %>");
        document.title = "My Messages";
        
    <% elsif params[:act] == 'schools' %>
        $("#title_top_action").html("");
        $("#title").html("<%= escape_javascript( render 'title' ) %>");
        $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
        document.title = "My Schools";
        
    <% elsif params[:act] == 'posts' %>
        $("#title_top_action").html("");
        $("#title").html("<%= escape_javascript( render 'title' ) %>");
        $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
        document.title = "Search Posts";
        
    <% elsif params[:act] == 'users' %>
        $("#title_top_action").html("");
        $("#title").html("<%= escape_javascript( render 'title' ) %>");
        $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
        document.title = "Search Posts";
        
    <% elsif params[:act] == 'school_search' && (!params[:search].nil? || !params[:date].nil?) %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/user_postings') %>");
        document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Schools by #{(params[:state] || 'name').titleize}") %>";
    
    <% elsif params[:act] == 'school_search' %>
        <% if !params[:subact].nil? && params[:subact] == 'cancel' %>
            $("#title_top_action").html("");
        <% else %>
            $("#title_top_action").html("<%= escape_javascript(render 'tab_school_search') %>");
        <% end %>
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_schools").html("<%= escape_javascript(render 'home/user_schools' ) %>");
        document.title = "School Search";
    
    <% elsif params[:act] == 'board_search' && !params[:search].nil? %>
        <% if false %>
        $("#main_menu").html("<%= escape_javascript(render 'home/title_main_menu') %>");
        <% end %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/user_postings') %>");
        document.title = "<%= escape_javascript("#{params[:search].to_s.titleize} Boards") %>";
      
    <% elsif params[:act] == 'board_search' %>
        <% if !params[:subact].nil? && params[:subact] == 'cancel' %>
            $("#title_top_action").html("");
        <% else %>
            $("#title_top_action").html("<%= escape_javascript(render 'tab_board_search') %>");
        <% end %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_boards").html("<%= escape_javascript(render 'home/user_boards' ) %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/user_postings') %>");
        document.title = "Board Search";
        
    <% elsif params[:act] == 'post_search' && !params[:search].nil? %>
        $("#main_menu").html("<%= escape_javascript(render 'home/title_main_menu') %>");
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/user_postings') %>");
        document.title = "<%= escape_javascript("Search #{params[:search].to_s.titleize} in Posts") %>";
        
    <% elsif params[:act] == 'post_search' %>
        <% if !params[:subact].nil? && params[:subact] == 'cancel' %>
            $("#title_top_action").html("");
        <% else %>
            $("#title_top_action").html("<%= escape_javascript(render 'tab_post_search') %>");
        <% end %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        document.title = "Posts Search";
        
    <% elsif params[:act] == 'user_search' && !params[:search].nil? %>
        $("#main_menu").html("<%= escape_javascript(render 'home/title_main_menu') %>");
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/user_postings') %>");
        document.title = "<%= escape_javascript("Search #{params[:search].to_s.titleize} in Users") %>";
        
    <% elsif params[:act] == 'user_search' %>
        <% if !params[:subact].nil? && params[:subact] == 'cancel' %>
            $("#title_top_action").html("");
        <% else %>
            $("#title_top_action").html("<%= escape_javascript(render 'tab_user_search') %>");
        <% end %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        document.title = "People Search";
    
    <% elsif params[:act] == 'invite' && !params[:search].nil? %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $("#user_postings").html("<%= escape_javascript(render 'home/user_postings') %>");
        document.title = "<%= escape_javascript("Search #{params[:search].to_s.titleize} in Users") %>";
        
    <% elsif params[:act] == 'invite' %>
        $("#title_top_action").html("<%= escape_javascript(render 'tab_invite_search') %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#main_menu").html("<%= escape_javascript(render 'home/title_main_menu') %>");
        document.title = "Invite people";
        
    <% elsif params[:act] == 'write' %>
        $("#title_top_action").html("<%= escape_javascript(render 'tab_write_message') %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
        $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
        document.title = "Write to Board";
    
    <% elsif params[:act] == 'new_board' || params[:act] == 'edit_board' %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'home/sub_title_nav') %>");
        <% if !params[:subact].nil? && params[:subact] == 'cancel' && params[:act] == 'edit_board' %>
        $("#title_top_action").html("<%= escape_javascript(render 'home/tab_board_post_search') %>");
        <% elsif !params[:subact].nil? && params[:subact] == 'cancel' && params[:act] == 'new_board' %>
        $("#title_top_action").html("");
        <% else %>
        $("#title_top_action").html("<%= escape_javascript(render 'new_board_form') %>");
        <% end %>
        <% if params[:act] == 'new_board' %>
          document.title = "Create a new Board";
        <% else %>
          document.title = "Edit Board";
        <% end %>
    <% elsif params[:act] == 'add_event' %>
        $(".home_sub_title").html("<%= escape_javascript(render 'home/home_sub_title' ) %>");
        $(".sub_title_nav").html("<%= escape_javascript(render 'home/sub_title_nav') %>");
        $("#title_top_action").html("<%= escape_javascript(render 'home/tab_new_event') %>");
        document.title = "Add Event";
    <% end %>
    
<% elsif !params[:board].nil? %>
    $("#title_top_action").html("");
    <% if params[:date].nil? && params[:search].nil? %>    
    $("#title").html("<%= escape_javascript( render 'title' ) %>");
    $("#user_boards").html("<%= escape_javascript(render 'home/user_boards' ) %>");
    $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
    $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
    <% end %>
    $("#title_top_action").html("<%= escape_javascript(render 'home/tab_board_post_search') %>");
    $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
    document.title = "Board | <%= escape_javascript("#{current_user.full_name}") %>";
    
<% elsif !params[:school].nil? %>
    $("#title_top_action").html("");
    $("#title").html("<%= escape_javascript( render 'title' ) %>");
    $(".home_sub_title").html("<%= escape_javascript(render 'home_sub_title' ) %>");
    $(".sub_title_nav").html("<%= escape_javascript(render 'sub_title_nav') %>");
    $("#user_schools").html("<%= escape_javascript(render 'home/user_schools' ) %>");
    $("#user_postings").html("<%= escape_javascript(render 'shared/containers/page_container', :page_container => @postings) %>");
    document.title = "School | <%= escape_javascript("#{current_user.full_name}") %>";
<% end %>

<% if !params[:subact].nil? && params[:subact] == 'nav' %>
    $("#navigation").html("<%= escape_javascript(render 'home/navigation' ) %>");
<% end %>

$(".logo_messages").html("<%= escape_javascript( render 'home/check_new_msg' ) %>");
$(".info_note").html("<%= escape_javascript(render 'home/info') %>");
$(".loading").html("");

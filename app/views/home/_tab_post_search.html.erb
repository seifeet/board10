<div class="clearfix">

<div class="close_button clearfix clickable">
<%= link_to "Close", home_path + "?act=post_search&subact=cancel", :title => "Close Post Search" %>
</div>

<%= form_tag home_path, :method => :get, :id => "tab_posts_search", :remote => true do %>
<%= text_field_tag :date, params[:date], :size => 10, :id => "datepicker" %>
<%= text_field_tag :search, params[:search], :class => "input_field_large" %>
<%= hidden_field_tag 'act', 'post_search' %>
<%= submit_tag "Search posts", :name => nil, :class => 'button_neutral', :disable_with => "Searching..." %>
<% end %>
<script type="text/javascript">
$(function() {
    $( "#datepicker" ).datepicker({dateFormat: 'yy-mm-dd'});
});
</script>
</div>

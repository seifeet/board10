<% if !params[:act].nil? && ( params[:act] == 'add_event' || params[:act] == 'edit_event' ) && !current_user.nil? %>
<div class="clearfix">
<div class="close_button clickable">
<%= link_to "Close", {:board => params[:board], :act => 'cancel'}, :class => 'tips', :title => "Close Event", :disable_with => "Close" %>
</div>
<div class="action_button">
<%= link_to "Advanced editor", new_posting_path(@new_event) + "?board=#{@board.id}&act=event", :class => 'tips', :title => "Switch to advanced editing", :disable_with => "Loading..." %>
</div>
</div>

<div id="action_tab" class="clearfix">
<%= render 'home/new_event' %>
</div>
<% end %>

<% if params[:act] == 'schools' || params[:act] == 'school_search' || !params[:school].nil? %>
<div class="school_menu_button selected">
<% else %>
<div class="school_menu_button">
<% end %>
<%= link_to 'SCHOOLS', home_path+'?act=schools', :title => "Open School Menu" %>
</div>

<% if params[:act] == 'boards' || params[:act] == 'new_board' || params[:act] == 'board_search' || !params[:board].nil? %>
<div class="board_menu_button selected">
<% else %>
<div class="board_menu_button">
<% end %>
<%= link_to 'BOARDS', home_path+'?act=boards', :title => "Open Board Menu" %>
</div>

<!-- SECOND LEVEL SERVICE BUTTONS -->
<% if params[:act] == 'schools' || params[:act] == 'schools' || params[:act] == 'school_search' || !params[:school].nil? %>
<% if params[:act] == 'school_search' %>
<div class="search_school_menu_button selected">
<% else %>
<div class="search_school_menu_button">
<% end %>
<%= link_to 'ADD', home_path+"?act=school_search", :title => "Search for schools and add them to your profile" %>
</div>
<% elsif params[:act] == 'boards' || params[:act] == 'new_board' || params[:act] == 'board_search' || !params[:board].nil? %>
<% if params[:act] == 'board_search' %>
<div class="search_board_menu_button selected">
<% else %>
<div class="search_board_menu_button">
<% end %>
<%= link_to 'JOIN', home_path+"?act=board_search", :title => "Search for boards and add them to your profile" %>
</div>
<% if params[:act] == 'new_board' %>
<div class="new_board_menu_button selected">
<% else %>
<div class="new_board_menu_button">
<% end %>
<%= link_to 'NEW', home_path+"?act=new_board", :title => "Create a new board" %>
</div>
<% end %>
